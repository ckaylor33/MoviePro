@using MoviePro.ViewModels

@model LandingPageVM

@{
    ViewData["Title"] = "MovieTrack Pro";
}

<section class="p-4">
    <container>
        <div class="row d-grid mx-2">
            <span class="btn btn-lg btn-warning fw-bolder border-dark">UPCOMING</span>
        </div>
        <div class="row d-grid justify-content-evenly mx-0">
            <div class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{
                        var classText = "active";
                        for (var slide = 0; slide <= 3; slide++)
                        {
                            <div class="carousel-item @classText">
                                @*Get component from bootstrap - CARD COMPONENT and iterate over it*@
                                <div class="row">
                                    @foreach (var movie in Model.Upcoming.results.Skip(slide * 4).Take(4))
                                    {
                                        <div class="col-md-3">
                                            <div class="card" style="width: 18rem;">
                                                <img src="@movie.poster_path" class="card-img-top" alt="...">
                                                <div class="card-body d-grid">
                                                    <h5 class="card-title clampTitle">@movie.title</h5>
                                                    <p class="card-text clampOverview">@movie.overview</p>
                                                    <a asp-action="Details" asp-controller="Movies" asp-route-id="@movie.id" class="btn btn-lg btn-warning fw-bold">
                                                        Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            classText = "";
                        }
                    }
                </div>
            </div>
        </div>
    </container>
</section>

