@using MoviePro.Models.TMDB
@model ActorDetail

<div class="d-flex">
  <div class="flex-shrink-0">
    <img src="@Model.profile_path" alt="..." class="mr-3 align-self-center">
  </div>
  <div class="flex-grow-1 ms-3">
      <div class="row">
          <table class="table table-hover">
              <tbody>
                  <tr>
                      <td class="fw-bold">
                          Name:
                      </td>
                      <td>
                          @Model.name
                      </td>
                  </tr>
                  <tr>
                      <td class="fw-bold">
                          Biography:
                      </td>
                      <td>
                          @Model.biography
                      </td>
                  </tr>
                  <tr>
                      <td class="fw-bold">
                          Birthday:
                      </td>
                      <td>
                          @Model.birthday
                      </td>
                  </tr>
                  <tr>
                      <td class="fw-bold">
                          Place of birth:
                      </td>
                      <td>
                          @Model.place_of_birth
                      </td>
                  </tr>
              </tbody>
          </table>
      </div>
  </div>
</div>